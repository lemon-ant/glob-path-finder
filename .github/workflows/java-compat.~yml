name: Java compatibility matrix (light)

on:
  push:
    branches: [ main ]      # post-merge checks; поменяй, если default-ветка другая
  release:
    types: [ published ]    # перед публикацией релиза

jobs:
  compat-matrix:
    name: JDK ${{ matrix.java }} / ${{ matrix.vendor }}
    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        java: [ 11, 17, 21, 23 ]          # LTS + current
        vendor: [ temurin, microsoft ]     # расширишь при желании
        exclude:
          - vendor: microsoft
            java: 23
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Set up Java ${{ matrix.java }} (${{ matrix.vendor }})
        uses: actions/setup-java@v4
        with:
          distribution: ${{ matrix.vendor }}
          java-version: ${{ matrix.java }}
          cache: maven

      - name: Print Java version
        run: java -version

      # Light run: no heavy quality gates, just compile+tests
      # Your POM already has baseline bytecode via maven.compiler.release=11.
      - name: Build & test (light)
        run: |
          mvn -B -q -Dci=true -Dskip-quality-gates=true verify
